#include "shape.h"
#include <iostream>

Shape::Shape(std::string _name, std::string _color):name{ _name}, color{_color}{
}

Shape::~Shape(){
}

void Shape::get_color(){
    std::cout<<color<<", ";
}

std::string Shape::get_name(){
    return name;
}

Square::Square(std::string _name, std::string _color, int _length):Shape{_name, _color},length{_length}{
}

int Square::get_data(){
    return length;
}

Square::~Square(){
}

Rectangle::Rectangle(std::string _name, std::string _color, int _l1, int _l2):Square{_name, _color, _l1},l1{_l1},l2{_l2}{
}

Rectangle::~Rectangle(){
}

int Rectangle::get_data(){
    return l1+l2;
}
